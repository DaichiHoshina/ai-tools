{
  "_comment": "See README.md and claude-code/QUICKSTART.md for setup instructions. Note: context7 and playwright should be configured globally in ~/.claude/settings.json for use across all projects",
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/path/to/serena",
        "serena-mcp-server",
        "--project",
        "/path/to/ai-tools"
      ],
      "env": {},
      "_comment": "Replace /path/to/serena with your serena installation directory, and /path/to/ai-tools with the absolute path to this repository"
    }
  }
}
