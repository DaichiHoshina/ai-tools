# shellcheck configuration for ai-tools

# Exclude rules
disable=SC1090  # Can't follow non-constant source (lib files)
disable=SC1091  # Not following: file not found (CI environment)
disable=SC2034  # Variable appears unused (exported for other scripts)
disable=SC2076  # Remove quotes from regex (intentional literal match)
disable=SC2088  # Tilde in quotes (handled by eval or intentional)
disable=SC2154  # Variable referenced but not assigned (sourced from lib)
disable=SC2155  # Declare and assign separately (style preference)
disable=SC2250  # Prefer ${var} over $var (style preference)
disable=SC2221  # Pattern overrides later one (intentional fallthrough)
disable=SC2222  # Pattern never matches (intentional fallthrough)
disable=SC2292  # Prefer [[ ]] over [ ] (style preference)
