{
  "env": {
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "false",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "true",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "true",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "false",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_TELEMETRY": "true",
    "DISABLE_AUTOUPDATER": "true",
    "DISABLE_MICROCOMPACT": "false",
    "MAX_THINKING_TOKENS": "24000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "24000"
  },
  "permissions": {
    "deny": [
      "NotebookEdit"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/user-prompt-submit.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-tool-use.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-tool-use.sh",
            "async": true
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-compact.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-end.sh",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/notification.mp3",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true
  },
  "outputStyle": "normal",
  "language": "japanese",
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "考え中",
      "分析中",
      "構築中",
      "熟考中"
    ]
  },
  "skipDangerousModePermissionPrompt": true,
  "instructions": [
    "日本語で回答すること",
    "Guard関手: Safe射(読み取り)→即実行、Boundary射(編集)→確認必要、Forbidden射(破壊)→拒否",
    "any型禁止、as控える",
    "実装完了後は必ずverify-app実行",
    "2回同じアプローチで失敗したら/clearして再整理"
  ],
  "1feedbackSurveyState": {
    "lastShownTime": 1753938733414
  },
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code"
      ],
      "env": {
        "REQUESTS_CA_BUNDLE": "/opt/homebrew/lib/python3.14/site-packages/certifi/cacert.pem",
        "SSL_CERT_FILE": "/opt/homebrew/lib/python3.14/site-packages/certifi/cacert.pem"
      }
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    },
    "confluence": {
      "command": "__HOME__/.claude/mcp-wrappers/confluence-wrapper.sh",
      "args": []
    },
    "jira": {
      "command": "__HOME__/.claude/mcp-wrappers/jira-wrapper.sh",
      "args": []
    }
  }
}
